<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/general_normal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/general_normal_padding"
            android:background="@drawable/background_corner_rounded_white"
            android:orientation="vertical">
            <!-- Address Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_corner_rounded_white"
                android:backgroundTint="@color/colorLightGray"
                android:padding="@dimen/general_normal_padding"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/general_normal_text"
                        android:textColor="@color/colorBlack"
                        android:text="Set an address for the funds: "/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                    <ImageButton
                        android:id="@+id/settings_fragment_address_paste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_paste_24"/>
                    <ImageButton
                        android:id="@+id/settings_fragment_address_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_qr_code_24"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/settings_fragment_address"
                        android:layout_width="0dp"
                        android:imeOptions="actionDone"
                        android:inputType="textShortMessage|textNoSuggestions|textCapWords"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_corner_rounded_white"
                        android:backgroundTint="@color/colorGrayIntense"
                        android:padding="@dimen/general_normal_padding"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/general_small_text"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/general_normal_margin"
                android:background="@drawable/background_corner_rounded_white"
                android:backgroundTint="@color/colorLightGray"
                android:padding="@dimen/general_normal_padding"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/general_normal_text"
                    android:textColor="@color/colorBlack"
                    android:text="Set CPU cores to Use: "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.google.android.material.slider.Slider
                        android:id="@+id/settings_fragment_cpu_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/general_normal_padding"
                        android:valueFrom="1"
                        android:valueTo="8"
                        android:stepSize="1"/>
                    <TextView
                        android:id="@+id/settings_fragment_cpu_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/general_grand_text"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_weight="5"
                        android:text="1"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/general_normal_margin"
                android:background="@drawable/background_corner_rounded_white"
                android:backgroundTint="@color/colorLightGray"
                android:padding="@dimen/general_normal_padding"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/general_small_padding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/general_normal_text"
                        android:textColor="@color/colorBlack"
                        android:text="Set miner mode: "/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorChatBlack"
                        android:textStyle="bold"
                        android:textSize="@dimen/general_small_text"
                        android:text="@string/settings_solo"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/settings_fragment_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:paddingHorizontal="@dimen/general_small_padding"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorChatBlack"
                        android:textSize="@dimen/general_small_text"
                        android:text="@string/settings_pool"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/general_normal_text"
                        android:textColor="@color/colorBlack"
                        android:text="MinerID"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/general_small_margin"
                        android:textStyle="bold"
                        android:text="[0-8100]"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/settings_fragment_minerID"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:np_textSize="@dimen/general_normal_text"
                        app:np_selectedTextColor="@color/colorBlack"
                        app:np_textColor="@color/colorChatBlack"
                        app:np_min="0"
                        app:np_max="8100"/>
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <Button
                    android:id="@+id/settings_fragment_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</FrameLayout>